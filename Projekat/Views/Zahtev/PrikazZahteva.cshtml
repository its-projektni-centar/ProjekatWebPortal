@model IEnumerable<Projekat.ViewModels.GlobalniZahtevViewModel>
@using Projekat.Helpers;
@{
    ViewBag.Title = "PrikazZahteva";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    @@media screen and (max-width: 600px) {
        .nestaje {
            display: none;
        }
    }
</style>
@if (this.User.IsInRole("SuperAdministrator") || this.User.IsInRole("LokalniUrednik") || this.User.IsInRole("Profesor"))
{
    <a id="novi-materijal" href="@Url.Action("UploadMaterijal", "Materijal")">
        <img src="~/Content/img/upload.png" alt="Novi materijal">
    </a>
}
<div id="sredina" class="nestaje">

    @foreach (var item in Model)
    {
        @Html.Partial("_KarticeZahtev", item)
    }

    <div class="modal fade" id="deleteModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Obavestenje <span>   </span></h4>
                </div>
                <div class="modal-body">
                    <p>Da li ste sigurni da želite da obrisete zahtev?</p>
                    <input type="hidden" id="hiddenZahtevId" />
                </div>
                <div class="modal-footer">
                    <button id="deleteConfirm" type="button" class="btn btn-default">Potvrdi</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Odustani</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/prikaziLupicuPretraga.js"></script>
@Scripts.Render("~/bundles/materijal_prikaz")
@Scripts.Render("~/bundles/PrikazZahteva")