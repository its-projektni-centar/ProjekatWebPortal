@model Projekat.ViewModels.DodajModulViewModel

@{
    ViewBag.Title = "Dodaj Modul";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="sredina">
    @using (Html.BeginForm("DodajModul", "Globalni", FormMethod.Post, new { @class = "modulForma", @id = "modulForma" }))
    {
    <h2>Novi modul</h2>
    <label class="matDesignLabel" for="modulNaziv">Naziv modula</label>
    @Html.TextBoxFor(m => m.modul.modulNaziv, new { @name = "modulNaziv" });
    <label id="poruka" class="error"></label>

    <label class="matDesignLabel" for="modulOpis">Opis</label>
    @Html.TextAreaFor(m => m.modul.modulOpis, new { @name = "modulOpis" });

    <div id="dropDownovi">
        <div id="_predmetiNaSmeru">
            @Html.DropDownListFor(m => m.predmetId, new SelectList(Model.Predmeti, "predmetId", "predmetNaziv"), new { @class = "customDropdown", @name = "" })
        </div>
    </div>

    <button type="submit" id="postavi">POSTAVI</button>
    }
    <div id="snackbar"><span>Smer uspešno dodat!</span></div>
</div>

@Scripts.Render("~/Scripts/Modul/ProveraImenaDodajGlobalni.js")
@Scripts.Render("~/bundles/DodajModul")
@Scripts.Render("~/bundles/novi_modul")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}