@model Projekat.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Zaboravili ste lozinku?";
}
<div id="sredina" name="sredina">


<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", @id = "noviKorisnik", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Unesite Vasu e-mail adresu</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "matDesignLabel" })
       
            @Html.TextBoxFor(m => m.Email, new { @class = "korisnikTB" })
        
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" class="btn btn-default" value="Posalji link na email" style="width: 75%;margin-left: 11%;" />
        </div>
    </div>
}</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
