@using Projekat.ViewModels;
@model ForumViewModel

@if(Model != null)
{ 
foreach (var i in Model.postsModel)
{
    <div class="kartica" id=@i.Id_post>
        <div class="karticaTekts">
            <h2>
                @Html.ActionLink(i.posttitle, "PrikaziSadrzaj", "Forum", new { idPost = i.Id_post }, new { @class = "forum-textNaslov" })
            </h2>

            <p class="opis">
                @i.postmessage
            </p>
            <p class="opis"><span class="forum-text">Datum objave:</span> @i.posteddate</p>
            <div class="kontrole">
                <a class="preuzmi" href="#" data-toggle="modal" data-target="#modalKomentar">dodaj komentar</a>
            </div>
        </div>
        <div class="karticaFormat">
            <img class="imgPath forumTemaSlika" src="@Url.Content("~/Content/img/"+i.imgTema)" alt="slika forum">
        </div>
    </div>


    <div class="modal fade forumModal1" id="modalKomentar" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" onclick="$('#summernote').summernote('reset'); $('#error').text('')">&times;</button>
                    <h4 class="modal-title">Komentar</h4>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("KomentarDodavanje", "Forum", new { @idPost = i.Id_post }, FormMethod.Post, new { @id = "noviKomentar" }))
                    {
                    <div class="editor forumTextArea">
                        @Html.TextAreaFor(m => m.forum2.messagePost, new { @id = "summernote", @name = "editor" })
                        <script>
                            $(document).ready(function () {
                                $("#modalKomentar").on("shown.bs.modal", function () {
                                    $('#summernote').summernote({
                                        placeholder: 'Ovde unesite komentar...',
                                        tabsize: 1,
                                        height: 100
                                    });
                                });
                            });
                        </script>
                    </div>
                        <small class="text-muted forumError" id="error"></small>
                    }
                </div>
                <div class="modal-footer">
                    <button id="Potvrda" type="submit" class="btn btn-default btn-sekundarni">Potvrdi</button>
                    <button id="dugmeOtkaz" type="button" class="btn btn-default btn-sekundarni" data-dismiss="modal" onclick="$('#summernote').summernote('reset'); $('#error').text('')">Odustani</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#Potvrda").click(function () {
                if ($($("#summernote").summernote("code")).text() != '') {
                    $("#noviKomentar").submit();
                } else {
                    $("#error").text("polje je prazno");
                    return false;
                }
            });
        });
    </script>
}
    }
